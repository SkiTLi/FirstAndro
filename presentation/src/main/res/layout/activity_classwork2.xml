<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/classworkBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="@dimen/classwork2_start_end_padding"
    android:paddingStart="@dimen/classwork2_start_end_padding">


    <EditText
        android:id="@+id/usernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/classwork2_username"
        android:inputType="textPersonName" />

    <!---->

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />


    <!--текст колор вынесли в стайл-->
    <Button

        android:id="@+id/loginButton"
        style="@style/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/classwork2_start_end_padding"
        android:layout_marginStart="@dimen/classwork2_start_end_padding"
        android:text="@string/classwork2_login" />


</LinearLayout>